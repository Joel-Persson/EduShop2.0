@using Newtonsoft.Json
@model EduShop_Unsecure.Models.UserModel
@{
    ViewBag.Title = "Login";
}
<article>
    @using (@Html.BeginForm())
    {
        @Html.LabelFor(m => m.Email, "Email:")
        @Html.TextBoxFor(m => Model.Email, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => Model.Password, "Password:")
        @Html.TextBoxFor(m => Model.Password, new { @class = "form-control" })
        <br />
        <input type="submit" class="btn btn-success" value="Log In" />
    }
    <br />
    @Html.ActionLink("Click here to register", "Register", "ManageAccount", new { @class = "btn btn-danger" })
</article>
