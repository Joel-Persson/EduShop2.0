@model List<EduShop_Unsecure.Models.ProductModel>
@{
    ViewBag.Title = "Products";
}
<article class="contentcontainer">
    <div style="margin-top:20px;">
        <link href="~/Content/Product.css" rel="stylesheet" />

        <div>
            @Html.Action("Sidebar", "Home")
        </div>

        <article class="col-md-9">

            <div class="panel panel-default">

                <div class="panel-heading">

                    <h4 class="panel-title"><span class="glyphicon glyphicon-th"></span>
                        @if (string.IsNullOrEmpty(ViewBag.Category) && string.IsNullOrEmpty(ViewBag.SearchTerm))
                        {
                            <span>Products</span>
                        }
                        else if (@ViewBag.SearchTerm != null)
                        {
                            <span>Results for "@ViewBag.SearchTerm"</span>
                        }
                        else
                        {
                            @ViewBag.Category
                        }
                    </h4>
                </div>
                
                    @foreach (var item in Model)
                    {
                        @Html.Action("ProductPartial", "Home", new { item.Id })
                    }
                
                <div style="clear:both"></div>
            </div>

        </article>

    </div>
    <div style="clear:both"></div>
</article>
